# Server Configuration
NODE_ENV=production
PORT=3001

# Database
DATABASE_PATH=./data/database.sqlite

# Frontend
FRONTEND_URL=http://localhost:5173

# ZhipuAI Configuration
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPU_API_KEY=your_zhipu_api_key_here

# JWT Secret
JWT_SECRET=your-secret-key-change-in-production

# Rate Limiting
# WindowMs: 时间窗口（毫秒）
# Max: 时间窗口内最多请求数
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
# Options: error, warn, info, http, debug
LOG_LEVEL=info

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY_MS=1000

# WeChat Pay Configuration
WECHAT_APPID=your_wechat_appid
WECHAT_MCHID=your_merchant_id
WECHAT_SERIAL_NO=your_serial_no
WECHAT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----
# 或者使用私钥文件路径
# WECHAT_PRIVATE_KEY_PATH=./config/wechat_private_key.pem
WECHAT_NOTIFY_URL=https://yourdomain.com/api/payment/wechat/notify

# Alipay Configuration
ALIPAY_APPID=your_alipay_appid
ALIPAY_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nyour_private_key\n-----END RSA PRIVATE KEY-----
ALIPAY_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nalipay_public_key\n-----END PUBLIC KEY-----
ALIPAY_NOTIFY_URL=https://yourdomain.com/api/payment/alipay/notify

# Task Queue Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=AI Service Platform
