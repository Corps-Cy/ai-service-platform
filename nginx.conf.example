# AI Service Platform - Nginx配置示例
# 
# 使用方法：
# 1. 复制此文件到 /etc/nginx/sites-available/ai-platform
# 2. 创建软链接: sudo ln -s /etc/nginx/sites-available/ai-platform /etc/nginx/sites-enabled/
# 3. 修改 server_name 为你的域名
# 4. 测试配置: sudo nginx -t
# 5. 重载Nginx: sudo systemctl reload nginx

server {
    listen 80;
    server_name your-domain.com;  # 修改为你的域名或服务器IP

    # 访问日志
    access_log /var/log/nginx/ai-platform.access.log;
    error_log /var/log/nginx/ai-platform.error.log;

    # 客户端请求体大小限制（用于文件上传）
    client_max_body_size 50M;

    # Gzip压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;

    # ========================================
    # API代理 - 转发到后端服务
    # ========================================
    location /api {
        proxy_pass http://127.0.0.1:3001;
        proxy_http_version 1.1;
        
        # 传递客户端真实信息
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket支持
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # ========================================
    # 前端静态文件 - 转发到前端容器
    # ========================================
    location / {
        proxy_pass http://127.0.0.1:80;
        proxy_http_version 1.1;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 缓存静态资源
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$ {
            proxy_pass http://127.0.0.1:80;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # ========================================
    # 上传文件访问
    # ========================================
    location /uploads {
        proxy_pass http://127.0.0.1:3001;
        proxy_set_header Host $host;
    }

    # ========================================
    # 健康检查端点
    # ========================================
    location /health {
        proxy_pass http://127.0.0.1:3001/health;
        access_log off;
    }
}

